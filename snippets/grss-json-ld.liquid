        {% comment %} startBreadcrumbGrss {% endcomment %}
{% if template.name == "collection" %}
<script type="application/ld+json">
{
	"@context": "https://schema.org",
	"@type": "BreadcrumbList",
	"itemListElement": [{
		"@type": "ListItem",
		"position": 1,
		"name": "{{shop.name}}",
		"item": "{{ shop.url }}"
		},{
		"@type": "ListItem",
		"position": 2,
		"name": "{{collection.title | strip_html | escape}}",
		"item": "{{ shop.url }}{{collection.url}}"
	}]
}
</script>
{% endif %}
{% if template.name == "product" %}
<script type="application/ld+json">
{
	"@context": "https://schema.org",
	"@type": "BreadcrumbList",
	"itemListElement": [{
		"@type": "ListItem",
		"position": 1,
		"name": "{{shop.name}}",
		"item": "{{ shop.url }}"
		},{
		"@type": "ListItem",
		"position": 2,
		"name": "{{product.title | strip_html | escape}}",
		"item": "{{ shop.url }}{{product.url}}"
	}]
}
</script>
{% endif %}
{% comment %} endBreadcrumbGrss {% endcomment %}
{% comment %} startArticleGrss {% endcomment %}
{% if template.name == "article" %}
<script type="application/ld+json">
{
	"@context": "https://schema.org",
	"@type": "Article",
	"mainEntityOfPage": {
	"@type": "WebPage",
	"@id": "{{ shop.url }}{{ article.url }}"
	},
	"headline": "{{article.title | strip_html | escape}}",
	"image": [
	"{{article.image.src | img_url: 'large'}}"
	],
	"datePublished": "{{article.published_at}}",
	"author": {
		"@type": "Person",
		"name": "Edrianne Nicole Del Rosario"
	},
	"publisher": {
		"@type": "Organization",
		"name": "RELX Club",
		"logo": {
			"@type": "ImageObject",
			"url": "https://imgur.com/yTRNwxV"
		}
	},
	"description": "{{page_description | default: shop.description | strip_html | escape}}",
	"dateModified": "{{ article.updated_at }}"}
</script>
{% endif %}
{% comment %} endArticleGrss {% endcomment %}

