{%- assign colors 		 = color | split: ',' -%}
{%- assign ar_color 	 = settings.color_config | downcase | split: ',' -%}
{%- assign color_setting = '' -%}

{%- for i_color in ar_color -%}
	{%- assign temp 	= i_color | strip_newlines -%}
	{%- assign _color 	= temp | split: ':' | first | handleize -%}
	{%- assign _cl_code = temp | split: ':' | last | strip -%}
	{%- unless color contains _cl_code -%}
		{%- capture temp_color %}label.cf-{{_color}},.cf-{{_color}}{background-color: {{_cl_code}};}{% endcapture -%}
		{%- assign color_setting = color_setting | strip | append: temp_color -%}
	{%- endunless -%}
{%- endfor -%}
{%- for i_color in colors  -%}
	{%- assign temp		= i_color | strip_newlines -%}
	{%- assign _color 	= temp | split: ':' | first | handleize -%}
	{%- assign _cl_code = temp | split: ':' | last -%}
	{%- capture temp_color %}label.cf-{{_color}},.cf-{{_color}}{background-color: {{_cl_code}};}{% endcapture -%}
	{%- assign color_setting = color_setting | strip | append: temp_color -%}
{%- endfor -%}
<style>{{color_setting}}</style>
{%- endif -%}