
{% assign light-color = settings.light_color %}
{% assign dark-color = settings.dark_color %}

{% capture menu_sale_label_color %}
  {% assign color = settings.menu_sale_label_bg  %}
  {% assign color_brightness = color | color_brightness %}
  {% if color_brightness >= 129 %}
    {{ dark-color }}
  {% else %}
    {{ light-color }}
  {% endif %}
{% endcapture %}

